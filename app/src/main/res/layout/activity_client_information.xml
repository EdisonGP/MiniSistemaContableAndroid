<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientInformationActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="24dp"
        android:text="InformaciÃ³n del Cliente"
        android:textSize="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtEditCliNombre"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/border_edit_text"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/txtEditCliApellido"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/border_edit_text"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEditCliNombre"  />

    <EditText
        android:id="@+id/txtEditCliCorreo"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/border_edit_text"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEditCliApellido" />

    <EditText
        android:id="@+id/txtEditCliUsuario"
        android:layout_width="262dp"
        android:layout_height="55dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/border_edit_text"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEditCliCorreo"  />

    <EditText
        android:id="@+id/txtEditCliClave"
        android:layout_width="263dp"
        android:layout_height="59dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/border_edit_text"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEditCliUsuario"  />

    <Button
        android:id="@+id/btnActualizarCli"
        android:layout_width="165dp"
        android:layout_height="46dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/border_button"
        android:backgroundTint="#12BABD"
        android:text="ACTUALIZAR"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEditCliClave" />

    <Button
        android:id="@+id/btnEliminarCli"
        android:layout_width="165dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/border_button"
        android:backgroundTint="#12BABD"
        android:text="ELIMINAR"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/btnActualizarCli"
        app:layout_constraintTop_toBottomOf="@+id/txtEditCliClave" />
</androidx.constraintlayout.widget.ConstraintLayout>